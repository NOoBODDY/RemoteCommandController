@model WebServer.ViewModels.ScriptVM;

@{
    ViewData["Title"] = "Новый скрипт";
}

<form asp-action ="CreateScript" asp-controller = "Computer" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="@Model.FileText">Введите Скрипт</label>
                    <input type="text" asp-for="@Model.FileText" />
                    <span asp-validation-for="@Model.FileText"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.FileName">Введите имя файла</label>
                    <input type="text" asp-for="@Model.FileName" />
                    <span asp-validation-for="@Model.FileName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.FilePath">Введите путь к файлу</label>
                    <input type="text" asp-for="@Model.FilePath" />
                    <span asp-validation-for="@Model.FilePath"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Отправить" class="btn"/>
                </div>
            </div>
            
    </form>
