@model WebServer.ViewModels.ComputerPageViewModel

<div class="text-center">
    <h1 class="display-4">Компьютер @Model.ComputerName</h1>
    <form asp-action ="SendCommand" asp-controller = "Computer" asp-route-id = "@Model.Id" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Command">Введите команду</label>
                    <input type="text" asp-for="Command" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Отправить" class="btn" />
                </div>
            </div>
            
    </form>
    <h1 class="display-3">Сообщения</h1>
    <div class = "form-group">
        <table>
            <tr>
                <td>Дата</td> <td>Сообщение</td>
            </tr>
            @foreach (var item in @Model.Messages)
            {
                <tr>
                    <td>@item.DateTime</td> <td>@item.message</td>
                </tr>
            }
        </table>
    </div>
    <h1 class="display-3">Модули</h1>
    <div class = "form-group">
        <table>
            <tr>
                <td>Модуль</td> <td>Автор</td>
            </tr>
            @foreach (var item in @Model.Moduls)
            {
                <tr>
                    <td>@item.Name</td> <td>@item.Author.Name</td>
                </tr>
            }
        </table>
    </div>

    <div class="form-group">
        <a asp-action = "Edit" asp-controller = "Computer" asp-route-id = "@Model.Id" class = "btn">Настройки</a>
    </div>
    <div class="form-group">
        <a asp-action = "AddModule" asp-controller = "Computer" asp-route-id = "@Model.Id" class = "btn">Добавить модуль</a>
    </div>
</div>