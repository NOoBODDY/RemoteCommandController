@model WebServer.Models.ComputerViewModel
@{
    ViewBag["Title"] = "Редактирование компьютера";
}
<div class="text-center">
    <h1 class="display-4">Компьютер @Model.ComputerName</h1>
    <form asp-action ="Edit" asp-controller = "Computer" method="post" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="ComputerName">Введите команду</label>
                    <input type="text" asp-for="ComputerName" value = "@Model.ComputerName"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Отправить" class="btn" />
                </div>
            </div>        
    </form>
</div>
